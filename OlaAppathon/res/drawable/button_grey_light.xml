<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" android:drawable="@drawable/button_disabled" />
    
    <item android:state_focused="true" android:drawable="@drawable/button_highlighted_light_grey"/>
    <item android:state_pressed="true" android:drawable="@drawable/button_highlighted_light_grey"/>
    
    <item>
        <shape>
            <gradient android:startColor="@color/divider_color" android:endColor="@color/divider_color" android:angle="270" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>